@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>Add Your Name</h2>
        <form action="/" method="POST">
            <input name="name" id="name" type="text"/>
            <button type="submit">Submit</button>
        </form>
    </div>
    <div class="col-md-6">
        @{
            if (ViewBag.Name != null)
            {
                <text>Hi</text> @ViewBag.Name
            }
        }
    </div>
</div>